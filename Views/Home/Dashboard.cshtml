@model Language
<header>
    <div class="border bg-success p-3">
        <div class="row">
            <div class="col text-center">
                <img src="https://www.learnwithkak.com/wp-content/uploads/2017/12/pq-639x406.jpg" height="200px" alt="psandqs">
            </div>
            <div class="d-flex flex-column col justify-content-center">
                <h3>Welcome @ViewBag.RussianDoll.Name!</h3>
                <h4>What Programming Languages Are You Studying?</h4>
            </div>
        </div>
    </div>
</header>
<div class="container row text-center mt-5">
    <div class="col w-50">
        <h5>Add a Language of Study:</h5>
        <form action="/addLanguage" method="post">
            <input asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input type="hidden" name="UserId" value="@ViewBag.userId">
            <input type="submit" value="Submit" class="btn btn-info">
        </form>
    </div>
    <div class="col w-50">
                
                @{
                foreach(Language l in ViewBag.RussianDoll.Languages)
                {
                        <a href="/language/@l.LanguageId" class="btn text-success border border-success">@l.Name</a> 
                        <a href="/edit/language/@l.LanguageId" class="btn text-danger border border-danger">Update</a>
                }
                }
    </div>
</div>