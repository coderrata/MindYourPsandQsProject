@model Objective
<header>
    <div class="border bg-success p-3">
        <div class="row">
            <div class="col text-center">
                <img src="https://www.learnwithkak.com/wp-content/uploads/2017/12/pq-639x406.jpg" height="200px" alt="psandqs">
            </div>
            <div class="d-flex flex-column col justify-content-center">
                <div>
                    <a href="/dashboard" class="text-light">Back to Languages |</a>
                    <a href="/language/@Model.LanguageId" class="text-light">| Back to Objectives</a>
                </div>
                <div>
                    <h3>Update Objective</h3>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="text-center container mt-5">
<div class="row container mt-2">
    <div class="col">
        Objective:
        <form action="/update/objective/@Model.ObjectiveId" method="post">
        <input asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="hidden" name="LanguageId" value="@Model.LanguageId">
        <input type="submit" value="Submit" class="btn btn-info">
        </form>
    </div>
    <div class="col">
        <p>Delete Objective?</p>
        <a href="/deleteObjective/@Model.ObjectiveId" class="btn btn-danger">Delete</a>
    </div>
    </div>
</div>