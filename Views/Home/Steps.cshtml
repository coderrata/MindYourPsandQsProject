@model Step
<header>
    <div class="border bg-success p-3">
        <div class="row">
            <div class="col text-center">
                <img src="https://www.learnwithkak.com/wp-content/uploads/2017/12/pq-639x406.jpg" height="200px" alt="psandqs">
            </div>
            <div class="d-flex flex-column col justify-content-center">
                <div>
                    <a href="/dashboard" class="text-light">Back to Languages | </a>
                    <a href="/language/@ViewBag.RussianDoll.LanguageId" class="text-light">| Back to Objectives</a>
                </div>
                <div>
                    <h3>Steps in Objective</h3>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="text-center d-flex container row mt-5">
    <div class="col">
        <h5>Add a Step:</h5>
        <form action="/addStep" method="post">
        <input asp-for="AStep">
        <span asp-validation-for="AStep" class="text-danger"></span>
        <input type="hidden" name="ObjectiveId" value="@ViewBag.objectiveId">
        <input type="submit" value="Submit" class="btn btn-info">
        </form>
    </div>
    <div class="col">
        <h5>Instructions to @ViewBag.RussianDoll.Name </h5>
        <ol class="text-left">
            @{
                foreach(Step s in ViewBag.RussianDoll.Steps)
                {
                    <button class="btn text-success"><li>@s.AStep <a href="/edit/step/@s.StepId" class="btn text-danger border border-danger">Edit Step</a></li></button>
                }
            }
        </ol>
    </div>
</div>